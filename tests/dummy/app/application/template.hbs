<h2 id="title">Welcome to Ember</h2>

{{outlet}}

<button type="button" class="btn btn-primary" onclick={{action 'toggleShow'}}>
  Show Modal
</button>

{{#if showModal}}
  {{#bootstrap-modal close=(action 'toggleShow') closeOnOverlayClick=true}}
    <div class="modal-header">
      <button type="button" class="close" aria-label="Close" {{action 'toggleShow'}}>
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">Test</h4>
    </div>

    <div class="modal-body">
      Test
    </div>

    <div class="modal-footer">
      <button {{action 'toggleShow'}} type="button" class="btn btn-primary">
        Close
      </button>
    </div>
  {{/bootstrap-modal}}
{{/if}}
